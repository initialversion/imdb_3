<!-- Validation failure messages -->
<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Movie #<%= @movie.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_movie/<%= @movie.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @movie.title %>">
      </div>

      <!-- Label and input for duration -->
      <div class="form-group">
        <label for="duration" class="control-label">
          Duration
        </label>

        <input type="text" id="duration" name="duration" placeholder="Duration" class="form-control" value="<%= @movie.duration %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @movie.description %></textarea>
      </div>

      <!-- Label and input for director_id -->
      <div class="form-group">
        <label for="director_id" class="control-label">
          Director
        </label>

        <input type="text" id="director_id" name="director_id" placeholder="Director" class="form-control" value="<%= @movie.director_id %>">
      </div>

      <!-- Label and input for average_rating -->
      <div class="form-group">
        <label for="average_rating" class="control-label">
          Average rating
        </label>

        <input type="text" id="average_rating" name="average_rating" placeholder="Average rating" class="form-control" value="<%= @movie.average_rating %>">
      </div>

      <!-- Label and input for released_at -->
      <div class="form-group">
        <label for="released_at" class="control-label">
          Released at
        </label>

        <input type="text" id="released_at" name="released_at" placeholder="Released at" class="form-control" value="<%= @movie.released_at %>">
      </div>

      <!-- Label and input for showtime -->
      <div class="form-group">
        <label for="showtime" class="control-label">
          Showtime
        </label>

        <input type="text" id="showtime" name="showtime" placeholder="Showtime" class="form-control" value="<%= @movie.showtime %>">
      </div>

      <button class="btn btn-warning">
        Update Movie
      </button>
      or
      <a href="/movies/<%= @movie.id %>">Cancel</a>
    </form>
  </div>
</div>
