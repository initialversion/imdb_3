<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Duration</th>
        <th>Description</th>
        <th>Director</th>
        <th>Average rating</th>
        <th>Released at</th>
        <th>Showtime</th>
        <th>Actions</th>
      </tr>

      <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.description %></td>
        <td><%= movie.director.name %></td>
        <td><%= movie.average_rating %></td>
        <td><%= movie.released_at %></td>
        <td><%= movie.showtime %></td>
        <td>
          <a href="/movies/<%= movie.id %>" class="btn btn-primary">Show</a>
          <a href="/movies/<%= movie.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_movie/<%= movie.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @movies, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
